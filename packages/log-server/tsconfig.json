{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./src/**/*.js",
    "./src/**/*.jsx",
    "./__tests__/**/*.ts",
    "./__tests__/**/*.js",
    "./__tests__/**/*.jsx",
    "./__tests__/**/*.tsx",
    "vitest.config.ts"
  ]
}
