{
  "name": "@lightmill/app",
  "version": "2.0.0",
  "description": "Base application for lightmill-runner.",
  "main": "dist/lightmill-app.js",
  "files": [
    "dist"
  ],
  "devDependencies": {
    "babel-core": "6.26.3",
    "babel-plugin-external-helpers": "6.22.0",
    "babel-preset-env": "1.7.0",
    "cross-env": "5.1.6",
    "eslint": "4.19.1",
    "eslint-config-airbnb-base": "12.1.0",
    "eslint-plugin-import": "2.12.0",
    "jest-transform-pug": "0.1.0",
    "rollup": "0.59.3",
    "rollup-plugin-babel": "3.0.4",
    "rollup-plugin-commonjs": "9.1.3",
    "rollup-plugin-node-resolve": "3.3.0",
    "rollup-plugin-pug": "0.1.6",
    "rollup-plugin-sass": "0.7.0",
    "simulant": "0.2.2"
  },
  "dependencies": {
    "pug-runtime": "^2.0.3"
  },
  "scripts": {
    "test": "cross-env NODE_ENV=test jest",
    "coverage": "yarn test --coverage",
    "build": "cross-env NODE_ENV=production rollup --config rollup.config.js",
    "prepublish": "npm run build"
  },
  "keywords": [
    "experiment",
    "lightmill",
    "application"
  ],
  "author": "Quentin Roy <quentin@quentinroy.fr>",
  "license": "MIT",
  "ava": {
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  },
  "repository": "https://github.com/QuentinRoy/lightmill-js/tree/master/packages/lightmill-app",
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "transform": {
      "^.+\\.jsx?$": "babel-jest",
      "\\.(pug)$": "jest-transform-pug"
    },
    "moduleNameMapper": {
      "\\.(css|styl|less|sass|scss)$": "<rootDir>/../../test-tools/jest-stub-styles.js"
    }
  }
}
