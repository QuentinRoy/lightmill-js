.lightmill-base-app.lightmill-base-app-block(class=practice?'lightmill-practice':'')
  .lightmill-block
    if subjectiveAssessment
      .lightmill-message
        | Please give your subjective assessment.
    else if number !== 0
      .lightmill-message
        | Time for a break?

    h1
      if practice
        | Practice
      else
        | Block #{measuredBlockNumber + 1}

    .lightmill-values
      each val in factorValues
        .lightmill-value
          = val.factor.name
          | :
          = " " + val.name
