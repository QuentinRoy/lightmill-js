{
  "name": "@lightmill/log-api",
  "version": "3.0.0-beta.25",
  "description": "API for Lightmill log server",
  "author": "Quentin Roy <contact@quentinroy.fr>",
  "license": "MIT",
  "type": "module",
  "main": "./dist/api.js",
  "types": "./dist/api.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/api.d.ts",
        "default": "./dist/api.js"
      }
    },
    "./openapi.json": "./openapi.json"
  },
  "files": [
    "dist",
    "openapi.json"
  ],
  "scripts": {
    "build": "tsc -b tsconfig.build.json",
    "generate-openapi": "tsx ./scripts/generate-openapi.ts > ./openapi.json",
    "prepublish": "pnpm run build && pnpm run generate-openapi"
  },
  "devDependencies": {
    "@types/node": "catalog:",
    "typescript": "catalog:",
    "vite": "catalog:",
    "vitest": "catalog:"
  },
  "dependencies": {
    "@anatine/zod-openapi": "^2.2.7",
    "@ts-rest/core": "^3.52.0",
    "@ts-rest/open-api": "^3.52.0",
    "@zodios/core": "^10.9.2",
    "openapi3-ts": "^4.4.0",
    "zod": "^3.24.2"
  }
}
