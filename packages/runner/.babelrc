{
  "env": {
    "test": {
      "presets": [
        [
          "@babel/preset-env",
          {
            "targets": { "node": "current" }
          }
        ]
      ]
    },
    "production": {
      "presets": [
        [
          "@babel/preset-env",
          {
            "targets": { "browsers": ">1%" },
            "modules": false,
            "loose": true
          }
        ]
      ],
      "plugins": [
        [
          "@babel/plugin-transform-runtime",
          { "helpers": false, "regenerator": true }
        ]
      ]
    }
  }
}
