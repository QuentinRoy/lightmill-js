{
  "name": "lightmill",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@commitlint/cli": "6.1.3",
    "@commitlint/config-conventional": "6.1.3",
    "@commitlint/config-lerna-scopes": "6.1.3",
    "eslint": "4.18.2",
    "eslint-config-airbnb-base": "12.1.0",
    "eslint-config-prettier": "2.9.0",
    "eslint-plugin-import": "2.10.0",
    "eslint-plugin-prettier": "2.6.0",
    "husky": "0.14.3",
    "jest-transform-pug": "0.1.0",
    "lerna": "2.9.0",
    "prettier": "1.11.1",
    "pug": "2.0.0"
  },
  "scripts": {
    "build": "lerna run build",
    "postinstall": "yarn build",
    "lint": "eslint packages",
    "test": "jest",
    "coverage": "jest --coverage",
    "bootstrap": "lerna bootstrap",
    "publish": "lerna publish --conventional-commits",
    "postrewrite": "yarn git-hook",
    "precommit": "yarn git-hook",
    "git-hook": "yarn lint && yarn test",
    "commitmsg": "commitlint -e $GIT_PARAMS"
  },
  "devEngines": {
    "node": ">= 7.x",
    "npm": ">= 4.x <= 5.x"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {},
  "jest": {
    "collectCoverageFrom": [
      "packages/*/esm/**/*.js",
      "packages/*/src/**/*.js"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest",
      "\\.(pug)$": "jest-transform-pug"
    },
    "moduleNameMapper": {
      "\\.(css|styl|less|sass|scss)$": "<rootDir>/test-tools/jest-stub-styles.js"
    }
  }
}
