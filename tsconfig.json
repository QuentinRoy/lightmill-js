{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "es2020",
    "lib": ["es2020"],
    "module": "ES2020",
    "moduleResolution": "Node16",
    "noImplicitAny": true,
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true
  }
}
